{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "outputStyle": "10x Mentor",
  "cleanupPeriodDays": 99999,
  "model": "claude-opus-4-6[1m]",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/pre_session_start.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/check_loop_bypass.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/python-lint.sh",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/agent_spawned.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/long-job-notify.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/.claude/hooks/long-job-notify.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "core-toolkit@ai-safety-plugins": true,
    "research-toolkit@ai-safety-plugins": true,
    "writing-toolkit@ai-safety-plugins": true,
    "code-toolkit@ai-safety-plugins": true,
    "workflow-toolkit@ai-safety-plugins": true,
    "viz-toolkit@ai-safety-plugins": true
  },
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true,
  "plansDirectory": ".claude/plans",
  "statusLine": {
    "type": "command",
    "command": "__HOME__/Work-Stuff/dotfiles/tools/claude-statusline/target/release/claude-statusline"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  }
}
